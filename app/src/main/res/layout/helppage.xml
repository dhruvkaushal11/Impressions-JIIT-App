<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sc">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Need help ? Here you go"
        android:id="@+id/textView3"
        android:background="#a41d3b"
        android:textColor="#ffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:padding="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" IMPRESSIONS, the annual techno-cultural-managerial festival of JIIT, is a pulsating festival with an array of events including pro-nights, fashion shows, panel discussions, talk shows, theme- walk, programming contests, robotics, choreography, creative challenges, B-plan competitions, street plays and much much moreâ€¦"
        android:id="@+id/textView15"
        android:layout_gravity="center_horizontal"
        android:padding="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event Details"
        android:id="@+id/textView16"
        android:gravity="center_horizontal"
        android:padding="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="On home page you can see the Event Details added by Jiit Hubs"
        android:id="@+id/textView17"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView5"
        android:src="@drawable/ic_search_white_24dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"
        android:background="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search"
        android:id="@+id/textView43"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Use Search Icon using to search for the Event you are looking for! You can also signup/register for an event"
        android:id="@+id/textView18"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView13"
        android:src="@drawable/add_friend"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"
        android:background="#010101" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Events"
        android:id="@+id/textView19"
        android:padding="10dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Using My Event you can View  your event participation"
        android:id="@+id/textView20"
        android:padding="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView14"
        android:src="@drawable/ic_notifications_white_48dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"
        android:background="#010101" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notifications"
        android:id="@+id/textView21"
        android:padding="10dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="All the notification will be announced here!\n\nFor Xiaomi users\nIn order to receive notification please follow the following steps\n\n1. Go to your 'Security' App \n2. Tap on 'Permissions'\n3. Tap on 'Autostart' and turn on the 'Autostart' button for Impressions Jiit"
        android:id="@+id/textView22"
        android:padding="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="If you need more help just drop us a message on Feedback/Contact Us Page!"
        android:id="@+id/textView23"
        android:background="#a41d3b"
        android:textColor="#ffffff"
        android:padding="10dp" />

</LinearLayout>
    </ScrollView>