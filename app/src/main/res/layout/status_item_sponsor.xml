<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:weightSum="1"
    android:id="@+id/vg"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/relclick"
        android:background="@drawable/card2"
        android:elevation="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date"
                android:id="@+id/date"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:textColor="#ff1d6728"
                android:textSize="0dp"
                android:layout_alignTop="@+id/time"
                android:layout_alignLeft="@+id/memories_Dp"
                android:layout_alignStart="@+id/memories_Dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/memories_Dp"
                android:src="@drawable/default_contact"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Time"
                android:id="@+id/time"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:textColor="#ff1d6728"
                android:textSize="0dp"
                android:layout_alignRight="@+id/memories_Dp"
                android:layout_alignEnd="@+id/memories_Dp"
                android:layout_alignTop="@+id/memories_Dp" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>