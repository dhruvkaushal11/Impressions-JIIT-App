<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.impressions.jiit.search"
    android:padding="0dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Search Events"
        android:id="@+id/textView"
        android:background="#af1d30"
        android:textColor="#ffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_text"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="#66408e"
        android:imeOptions="actionGo"
        android:padding="10dp"
        android:hint="Type Event Name/Code"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_toLeftOf="@+id/do_Search"
        android:layout_toStartOf="@+id/do_Search"
        android:maxLines="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/do_Search"
        android:src="@drawable/ic_search_white_24dp"
        android:layout_alignBottom="@+id/search_text"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:background="#66408e"
        android:padding="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_list"
        android:layout_below="@+id/search_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="#ffffff" />
</RelativeLayout>
