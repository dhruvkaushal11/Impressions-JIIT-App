<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.impressions.jiit.event_description"
    android:id="@+id/dvdv">
    <ScrollView
android:layout_height="wrap_content"
android:layout_width="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" "
            android:id="@+id/useless"
            android:layout_below="@+id/textView42"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title-"
            android:id="@+id/title"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="#66408e"
            android:textColor="#ffffff"
            android:layout_below="@+id/imageView12"
            android:layout_alignLeft="@+id/imageView12"
            android:layout_alignStart="@+id/imageView12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/imageView12"
            android:src="@drawable/no_image"
            android:padding="5dp"
            android:layout_below="@+id/useless"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Description"
            android:id="@+id/textView48"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No discription for this event!"
            android:id="@+id/description"
            android:layout_below="@+id/textView48"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rules"
            android:id="@+id/scdscsdc"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/description"
            android:layout_alignLeft="@+id/description"
            android:layout_alignStart="@+id/description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No rules for this event!"
            android:id="@+id/rules"
            android:padding="5dp"
            android:layout_below="@+id/scdscsdc"
            android:layout_alignLeft="@+id/textView48"
            android:layout_alignStart="@+id/textView48"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Requirements"
            android:id="@+id/textView50"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/rules"
            android:layout_alignLeft="@+id/scdscsdc"
            android:layout_alignStart="@+id/scdscsdc"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No such requirements for this event!"
            android:id="@+id/requirement"
            android:padding="5dp"
            android:layout_below="@+id/textView50"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/textView49"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/requirement"
            android:layout_alignLeft="@+id/requirement"
            android:layout_alignStart="@+id/requirement"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not decided yet!"
            android:id="@+id/date"
            android:padding="5dp"
            android:layout_below="@+id/textView49"
            android:layout_alignLeft="@+id/textView49"
            android:layout_alignStart="@+id/textView49"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time"
            android:id="@+id/textView52"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/date"
            android:layout_alignLeft="@+id/date"
            android:layout_alignStart="@+id/date"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No rules for this event!"
            android:id="@+id/time"
            android:padding="5dp"
            android:layout_below="@+id/textView52"
            android:layout_alignLeft="@+id/textView52"
            android:layout_alignStart="@+id/textView52"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Venue"
            android:id="@+id/textView54"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/time"
            android:layout_alignLeft="@+id/time"
            android:layout_alignStart="@+id/time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No rules for this event!"
            android:id="@+id/venue"
            android:padding="5dp"
            android:layout_below="@+id/textView54"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contact"
            android:id="@+id/textView55"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/venue"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not decided yet!"
            android:id="@+id/contact"
            android:padding="5dp"
            android:layout_below="@+id/textView55"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register "
            android:id="@+id/register_event"
            android:padding="10dp"
            android:layout_below="@+id/contact"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/contact"
            android:layout_alignEnd="@+id/contact"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="#3e6eaa"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Impressions Event"
        android:id="@+id/textView42"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="#a41d3b"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/useless"
        android:layout_alignStart="@+id/useless" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:layout_alignTop="@+id/textView42"
        android:layout_alignLeft="@+id/textView42"
        android:layout_alignStart="@+id/textView42"
        android:layout_alignBottom="@+id/textView42"
        android:padding="5dp" />

</RelativeLayout>
