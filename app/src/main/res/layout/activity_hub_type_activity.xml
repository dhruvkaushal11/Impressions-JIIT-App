<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.impressions.jiit.hub_type_activity"
android:padding="0dp">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Event"
    android:id="@+id/textView"
    android:background="#af1d30"
    android:textColor="#ffffff"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <ListView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/event_type_list"
    android:divider="#ffffff"
    android:layout_below="@+id/textView"
        android:layout_above="@+id/faculty_contact" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/faculty_contact"
        android:background="#66408e"
        android:textColor="#ffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoLink="phone|email|web"
        android:textColorLink="#f9ff35" />

</RelativeLayout>
